// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Habit {
  id         String   @id @default(uuid()) // @id define que é pk e @default gera um id automático (uuid)
  title      String
  created_at DateTime

  @@map("habits") // nome da tabela 
}
